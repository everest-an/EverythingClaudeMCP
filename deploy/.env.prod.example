# --- PostgreSQL ---
POSTGRES_USER=awesomecontext
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
POSTGRES_DB=awesomecontext
POSTGRES_PORT=5432

# The DATABASE_URL is used by Prisma (on the Vercel side).
# Format: postgresql://USER:PASSWORD@EC2_PUBLIC_IP:5432/DB
# Set this in Vercel's environment variables, not here.

# --- MCP Server Auth ---
# These URLs point to the Vercel-hosted landing page API routes.
# The MCP server calls these to validate API keys and log usage.
AC_VALIDATE_KEY_URL=https://awesomecontext.awareness.market/api/validate-key
AC_LOG_USAGE_URL=https://awesomecontext.awareness.market/api/log-usage

# Shared secret between MCP server (AWS) and landing page (Vercel)
# Must match the INTERNAL_API_SECRET set in Vercel env vars.
# Generate with: openssl rand -hex 32
INTERNAL_API_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL

# --- SSL ---
# Email for Let's Encrypt certificate notifications
CERTBOT_EMAIL=your@email.com
